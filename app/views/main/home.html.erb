<section id="banner"
    style="height: 600px; min-height: 100%; background-image: url('/images/home_banner.png');
    background-size: cover; background-repeat: no-repeat;
    background-position: center; width: 100%;">

    <div class="container">
        <section id="search" class="row" style="padding-top: 60px; margin-bottom: 80px;">
            <div class="col-md-6 add-padding-bottom" style="">
                <!--<div align="center">-->
                <!--    <img src="https://s3.us-east-2.amazonaws.com/senzzu/pill_bottle_icon.png"-->
                <!--        height="150" style="vertical-align: text-top !important;">-->
                <!--</div>-->
                <h5 class="white" id="banner-text">
                    A better pharmacy experience at your fingertips.
                </h5>
                <form action="/search" method="get" id="storeSearchForm" style="margin-top: 20px;">
                    <div class="input-group mb-3" style="margin-bottom: 0 !important;">
                        <div class="input-group-prepend">
                            <button class="input-group-text prepend-group cursor-pointer border-white" id="basic-addon1">
                                <i class="fa fa-search search-input-icon"></i>
                            </button>
                        </div>
                        <input type="hidden" id="search-type" name="search_type" value="address">
                        <input class="form-control no-box-shadow store-search border-white"
                            id="store-search" name="q" placeholder="Search pharmacy by address" autocomplete="off" onfocus="showSuggestionBox();">
                        <div class="dropdown">
                            <a class="btn btn-primary white set-search-type"
                                style="height: 65px; border-top-left-radius: 0; border-bottom-left-radius: 0; border-bottom-right-radius: 2px !important;
                                padding-top: 20px;"
                                id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-angle-down bold"></i>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="margin-left: -123px;">
                                <a class="background-transparent dropdown-item cursor-pointer" onclick="setSearchType('address')">
                                    By address
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="background-transparent dropdown-item cursor-pointer" onclick="setSearchType('store')">
                                    By store name
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-5 offset-md-1" id="patientSignupForm">
                <div class="card box-shadow-amp" style="">
                    <div class="card-body" style="border-radius: 2px !important;">
                        <h4 class="theme-color" align="center">Get started for free</h4>
                        <form onsubmit="signupShopper()" id="shopperSignupForm" data-remote="true" style="margin-top: 15px;">
                            <input type="text" class="form-control add-margin-bottom" placeholder="First Name" id="signupFirstName">
                            <input type="text" class="form-control add-margin-bottom" placeholder="Last Name" id="signupLastName">
                            <input type="email" class="form-control add-margin-bottom" placeholder="Email" id="signupEmail" required="true">
                            <input type="password" class="form-control add-margin-bottom" placeholder="Password" id="signupPassword" required="true">
                            <button type="submit" class="btn btn-primary btn-block add-margin-bottom height-55 box-shadow" id="signupBtn" onclick="signupShopper()">
                                Signup**
                            </button>
                        </form>
                        <p class="font-15 add-margin-top">
                            **Several features are not yet optimized. Signup
                            for our newsletter to be alerted when we officially launch.
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>

