<% alerts.each do |a| %>
    <div class="row" onmouseover="showDelete(this)" id="alert-<%= a.id %>">
        <div class="col-md-2">
            <span class="bold theme-blue"><%= a.alert_type %></span>
        </div>
        <div class="col-md-5">
            <%= a.content %>
        </div>
        <div class="col-md-4">
            Received on <span class="theme-color"><%= a.created_at.strftime('%a, %B %e, %Y') %></span>
        </div>
        <div class="col-md-1">
            <span class="badge badge-danger theme-red cursor-pointer white"
                onclick="alertRead(<%= a.id %>)">
                Confirm
            </span>
        </div>
        <div class="col-md-12">
            <hr style="margin-bottom: 10px; margin-top: 10px;">
        </div>
    </div>
<% end %>

<script type="text/javascript">
    function showDelete(elem) {
        var id = elem.id.split('-')[1];
        
        $('#alert-read-' + id).show();
    }
</script>