<% pharmacies.each do |pc| %>
    <div class="row">
        <div class="col-md-2">
            <span class="bold theme-color cursor-pointer underline"
                onclick="window.location.href='/stores/<%= pc.id %>/<%= pc.slug %>'">
                <%= pc.name %>
            </span>
        </div>
        <div class="col-md-3">
            Pharmacist: <span class="theme-color"><%= pc.supervisor %></span>
        </div>
        <div class="col-md-4">
            <span class="theme-blue"><%= pc.full_address %></span>
        </div>
        <div class="col-md-2">
            <span class="theme-blue"><%= pc.phone %></span>
        </div>
        <div class="col-md-12">
            <hr style="margin-bottom: 10px; margin-top: 10px;">
        </div>
    </div>
<% end %>
