<% payments.each do |pt| %>
    <div class="row">
        <div class="col-md-1">
            <span class="bold theme-green"><%= pt.amount %></span>
        </div>
        <div class="col-md-5">
            <span class=""><%= pt.memo %></span>
        </div>
        <div class="col-md-3">
            Paid on <span class="theme-color"><%= pt.paid_on.strftime('%a, %B %e, %Y') %></span>
        </div>
        <div class="col-md-3">
            Paid to <span class="bold"><%= pt.paid_to %></span>
        </div>
        <div class="col-md-12">
            <hr style="margin-bottom: 10px; margin-top: 10px;">
        </div>
    </div>
<% end %>
